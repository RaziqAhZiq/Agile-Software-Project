<!DOCTYPE html>
<html>

<head>
    <%- include ('base/head'); %>
    <title>Register Page</title>
    <style>
        .carousel, .carousel-item, .carousel-item img {
            height: 100vh;
            max-height: 100vh;
        }
    
        .carousel-item img {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }
    
        .login-container {
            max-width: 500px;
        }

        .spacer {
            margin-top: 30px;
        }

        .submit-btn {
            display: flex;
            justify-content: flex-end;
        }

        .btn.btn-primary {
            padding-right: 30px;
            padding-left: 30px;
        }

        .d-flex.justify-content-center.align-items-center {
            padding-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex">
        <div id="carouselExample" class="carousel slide w-50" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="images/travel_1.jpg" class="d-block w-100" alt="IMG 1">
                </div>
                <div class="carousel-item">
                    <img src="images/travel_2.jpg" class="d-block w-100" alt="IMG 2">
                </div>
                <div class="carousel-item">
                    <img src="images/travel_3.jpg" class="d-block w-100" alt="IMG 3">
                </div>
                <div class="carousel-item">
                    <img src="images/travel_4.jpg" class="d-block w-100" alt="IMG 4">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <div class="container login-container rounded shadow mx-auto">
                <H1 class="spacer">Travel Planner</H1>
                <H5>Register</H5>
                <form id="register-form" action="/register" method="POST">
                    <div class="form-group spacer">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
                    </div>
                    <div class="form-group spacer">
                        <label for="email">Confirm Email:</label>
                        <input type="email" class="form-control" id="cfm-email" placeholder="Retype email" name="confirm-email" required>
                    </div>
                    <div class="form-group spacer">
                        <label for="pwd">Password:</label>
                        <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="password" required>
                    </div>
                    <div class="form-group spacer">
                        <label for="pwd">Confirm Password:</label>
                        <input type="password" class="form-control" id="cfm-pwd" placeholder="Retype password" name="confirm-password" required>
                    </div>
                    <div class="submit-btn">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <p class="m-0 me-2">Already have an account?</p>
                        <a href="/login" class="btn btn-link">Sign In</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include ('base/footer'); %>
    <%- include ('base/navbarJS'); %>
    <script>
        window.onload = function(){
            firebase.auth().onAuthStateChanged(function(user){
                if (user){
                   window.location.href = '/home'
                }
            });
        }
        $(document).ready(function() {
            $("#register-form").submit(function(event) {
                event.preventDefault();
    
                const email = $("#email").val();
                const cfm_email = $("#cfm-email").val();
                const password = $("#pwd").val();
                const cfm_password = $("#cfm-pwd").val();

                if (email !== cfm_email) {
                    alert("Emails do not match!");
                    return;
                }
                if (password !== cfm_password) {
                    alert("Passwords do not match!");
                    return;
                }

                firebase.auth().createUserWithEmailAndPassword(email, password).then((userCredential) => {
                    var user = userCredential.user;
                    return window.location.href = "/home";
                })
                .catch((error) => {
                    var errorCode = error.code;
                    var errorMessage = error.message;
                    console.error('Error signing in', errorCode, errorMessage);
                    alert(errorMessage);
                });
            });
        });
    </script>
</body>

</html>